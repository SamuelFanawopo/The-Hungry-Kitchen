<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="src/style.css" />
    <title>The Hungry Kitchen</title>
  </head>
  <body>
    <!-- Navbar  -->
    <nav class="navbar target">
      <a href="#home" class="navbar-link">
        <i class="fas fa-home"></i>
        <span>Home</span>
      </a>
      <a href="#recipes" class="navbar-link">
        <i class="fa-solid fa-pizza-slice"></i>
        <span>Recipes</span>
      </a>
      <a href="#popular-meals" class="navbar-link">
        <i class="fa-solid fa-fire"></i>
        <span>Popular Meals</span>
      </a>
      <a href="#gallery" class="navbar-link">
        <i class="fa-solid fa-film"></i>
        <span>Gallery</span>
      </a>
      <a href="#sign-up" class="navbar-link">
        <i class="fa-solid fa-address-book"></i>
        <span>Sign up</span>
      </a>
    </nav>
    <div class="menu target"></div>
    <!-- End of Navbar  -->

    <div class="container">
      <!-- Section 1 -->
      <section class="section-1">
        <h1 class="section-heading home">The Hungry Kitchen</h1>
        <div class="section-1-icons">
          <i class="change fas fa-egg"></i>
          <i class="fas fa-stroopwafel"></i>
          <i class="fas fa-cheese"></i>
          <i class="fas fa-hotdog"></i>
          <i class="fas fa-drumstick-bite"></i>
          <i class="fas fa-apple-alt"></i>
          <i class="fas fa-ice-cream"></i>
          <i class="fas fa-fish"></i>
          <i class="fas fa-cookie"></i>
          <i class="fas fa-seedling"></i>
        </div>
        <!-- Search for recipes section -->
        <form class="search-box recipes" action="/search" method="post">
          <input
            type="text"
            name="search"
            class="search"
            placeholder="Search Your Recipe..."
          />
          <button type="submit" class="search-btn">
            <i class="fa fa-search"></i>
          </button>
        </form>
      </section>
      <!-- End Section 1 -->
      <!-- Section 2 -->
      <section class="section-2">
        <h1 class="section-heading popular-meals">popular recipes</h1>
        <div class="cards-container">
          <div class="card">
            <img src="<%= recipes[num1].recipe.image %>" class="card-img" />
            <h3 class="card-name"><%= recipes[num1].recipe.label %></h3>
            <p class="card-data">
              Calories: <%= Math.round(recipes[num1].recipe.calories) %>
            </p>
            <p class="card-data">
              Diet Label: <%= recipes[num1].recipe.dietLabels[0] %>
            </p>
            <p class="card-data">
              Health Labels: <%= recipes[num1].recipe.healthLabels.join(", ") %>
            </p>
            <a
              class="card-btn"
              target="_blank"
              href="<%= recipes[num1].recipe.url %>"
            >
              View Recipe
            </a>
          </div>
          <div class="card">
            <img src="<%= recipes[num2].recipe.image %>" class="card-img" />
